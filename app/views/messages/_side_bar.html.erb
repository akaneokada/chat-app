<div class="side-header">
    <%= link_to edit_user_path(current_user) do %>
      <div class="user-name">
        <%= current_user.name %>
      </div>
      <% end %>
  <div class="create-btn">
    <%= link_to 'チャットを作成する', new_room_path %>
  </div>
</div>
<div class="rooms">
    <% current_user.rooms.each do |room| %>
      <div class="room">
        <div class="room-name">
          <a href="#"><%= room.name %></a>
        </div>
      </div>
    <% end %>
</div>